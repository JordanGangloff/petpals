{
  "background_color": "white",
  "description": "La meilleure app pour changer la vie de votre chien !",
  "display": "fullscreen",
  "name": "Petpals",
  "icons": [
    <% files = Dir.entries(Rails.root.join("app/assets/images/icons/")).select { |f| !File.directory?(f) && f.match(/.+-(?<size>\d{2,3}x\d{2,3}).png/) } %>
    <% files.each_with_index do |file, index| %>
      <% match = file.match(/.+-(?<size>\d{2,3}x\d{2,3}).png/) %>
      {
        "src": "<%= image_path "icons/#{file}" %>",
        "sizes": "<%= match && match[:size] %>",
        "type": "image/png"
      }<%= "," unless (files.size - 1) == index %>
    <% end %>
  ]
}
