<h1 class="title-index">Tous mes matchs</h1>
<div class="cards-match">
  <% @matches.each do |match| %>
    <div class="card-match">
      <% if match.dog == current_user.dog%>
        <%= cl_image_tag match.second_dog.photos.first.key, width: 100, height: 100, crop: :fill, class: "dog-image"%>
      <% else %>
        <%= cl_image_tag match.dog.photos.first.key, width: 100, height: 100, crop: :fill, class: "dog-image"%>
      <% end %>

      <div class="match-info">
        <h2><%=match.dog == current_user.dog ? match.second_dog.name : match.dog.name %></h2>
        <p><%=l(match.created_at, format: "%a %e %b Ã  %l:%M")%></p>
      </div>
      <%= link_to match_path(match) do %>
        <%= image_tag "chat-heart.svg", class: "heart" %>
      <% end %>
    </div>
  <% end %>
</div>
